@page
@model BugCentre.PagesBugs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bug</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BugVm.BugName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BugVm.BugName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BugVm.DateTimeReported)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BugVm.DateTimeReported)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BugVm.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BugVm.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BugVm.Image)
        </dt>
        <dd class="col-sm-10">
            @if (Model.BugVm.Image != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.BugVm.Image)" style="max-height:150px; max-width:150px;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.BugVm.BugID">Edit</a> |
    <a asp-page="./Details" asp-route-id="@Model.BugVm.BugID" asp-page-handler="Pdf">Export as PDF</a> |
    <a asp-page="./Index">Back to List</a>
</div>
